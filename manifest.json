{
    "manifest_version": 3,
    "name": "Pomodoro Timer",
    "description": "A simple Pomodoro timer extension",
    "version": "1.0",
    "permissions": ["activeTab", "storage", "notifications"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "64": "images/icon64.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "64": "images/icon64.png",
      "128": "images/icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["popup.js"]
      }
    ]
  }
  